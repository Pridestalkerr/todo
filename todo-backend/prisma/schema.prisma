// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URI")
}

model User {
  id              Int         @id @default(autoincrement())
  email         String      @unique @db.VarChar(100)
  password      String
}

model Activity {
  id            Int         @id @default(autoincrement())
  title         String
  description      String
  status      Boolean
  todos     Todo[]
}

model Todo {
  id            Int         @id @default(autoincrement())
  title     String
  description      String
  status      Boolean
  activityId    Int
  activity      Activity    @relation(fields: [activityId], references: [id])
}
